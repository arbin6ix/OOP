<Page x:Class="OOP4200_Tarneeb.PageGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOP4200_Tarneeb"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="PageGame">

    <Canvas Name="gameCanvas">

        <!-- Player Portraits -->
        <Image Source="/Images/Player1.png" Height="100" Width="100" Canvas.Left="450" Canvas.Top="508"/>
        <Image Source="/Images/Player2.png" Height="100" Width="100" Canvas.Left="876" Canvas.Top="278"/>
        <Image Source="/Images/Player3.png" Height="100" Width="100" Canvas.Left="450" Canvas.Top="47"/>
        <Image Source="/Images/Player4.png" Height="100" Width="100" Canvas.Left="54" Canvas.Top="278"/>

        <!-- Player 1 Labels (with outline) -->
        <Label Foreground="Black"   FontFamily="Arial" FontWeight="Bold" FontSize="18" Canvas.Left="462" Canvas.Top="474">Player 1</Label>
        <Label Foreground="Black"   FontFamily="Arial" FontWeight="Bold" FontSize="18" Canvas.Left="464" Canvas.Top="474">Player 1</Label>
        <Label Foreground="Black"   FontFamily="Arial" FontWeight="Bold" FontSize="18" Canvas.Left="463" Canvas.Top="473">Player 1</Label>
        <Label Foreground="Black"   FontFamily="Arial" FontWeight="Bold" FontSize="18" Canvas.Left="463" Canvas.Top="475">Player 1</Label>
        <Label Foreground="#33BCFF" FontFamily="Arial" FontWeight="Bold" FontSize="18" Canvas.Left="463" Canvas.Top="474">Player 1</Label>

        <!-- Player 2 Labels (with outline) -->
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="888" Canvas.Top="246">Player 2</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="890" Canvas.Top="246">Player 2</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="889" Canvas.Top="245">Player 2</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="889" Canvas.Top="247">Player 2</Label>
        <Label Foreground="#FF5A5A" FontWeight="Bold" FontSize="18" Canvas.Left="889" Canvas.Top="246">Player 2</Label>

        <!-- Player 3 Labels (with outline) -->
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="462" Canvas.Top="24">Player 3</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="464" Canvas.Top="24">Player 3</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="463" Canvas.Top="23">Player 3</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="463" Canvas.Top="25">Player 3</Label>
        <Label Foreground="#33BCFF" FontWeight="Bold" FontSize="18" Canvas.Left="463" Canvas.Top="24">Player 3</Label>

        <!-- Player 4 Labels (with outline) -->
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="66" Canvas.Top="243">Player 4</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="68" Canvas.Top="243">Player 4</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="67" Canvas.Top="242">Player 4</Label>
        <Label Foreground="Black"   FontWeight="Bold" FontSize="18" Canvas.Left="67" Canvas.Top="244">Player 4</Label>
        <Label Foreground="#FF5A5A" FontWeight="Bold" FontSize="18" Canvas.Left="67" Canvas.Top="243">Player 4</Label>

        <!-- Played Cards -->
        <Image Name="playedCard1" Source="/Images/EmptyCard.png" Canvas.Left="466" Canvas.Top="356"/>
        <Image Name="playedCard2" Source="/Images/EmptyCard.png" Canvas.Left="596" Canvas.Top="266"/>
        <Image Name="playedCard3" Source="/Images/EmptyCard.png" Canvas.Left="466" Canvas.Top="166"/>
        <Image Name="playedCard4" Source="/Images/EmptyCard.png" Canvas.Left="336" Canvas.Top="266"/>

        <!-- Player's Hand -->
        <Image Name="p01" Source="/Images/EmptyCard.png" Canvas.Left="005" Canvas.Top="640" MouseDown="card01MouseDown" />
        <Image Name="p02" Source="/Images/EmptyCard.png" Canvas.Left="080" Canvas.Top="640" MouseDown="card02MouseDown" />
        <Image Name="p03" Source="/Images/EmptyCard.png" Canvas.Left="155" Canvas.Top="640" MouseDown="card03MouseDown" />
        <Image Name="p04" Source="/Images/EmptyCard.png" Canvas.Left="230" Canvas.Top="640" MouseDown="card04MouseDown" />
        <Image Name="p05" Source="/Images/EmptyCard.png" Canvas.Left="305" Canvas.Top="640" MouseDown="card05MouseDown" />
        <Image Name="p06" Source="/Images/EmptyCard.png" Canvas.Left="380" Canvas.Top="640" MouseDown="card06MouseDown" />
